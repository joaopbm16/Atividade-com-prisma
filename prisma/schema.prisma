generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuarios{
  id Int @id @default(autoincrement())
  nome_usua String
  email_usua String @unique
  senha_usua String
  criacao_usua DateTime @default(now())

  Postagens Postagens[]

  @@map("Usuarios")
}

model Postagens{
   id Int @id @default(autoincrement())
   usuario_id Int
   mensagem_post String
   criacao_post DateTime @default(now())

   usuario Usuarios @relation(fields: [usuario_id], references: [id])

   @@map("Postagens")
}

model CurtidasEmPostagens{
   id Int @id @default(autoincrement())
   usuario_id Int
   postagem_id String
   criacao_cupo DateTime @default(now())

   usuario Usuarios @relation(fields: [usuario_id], references: [id])
   postagens Postagens @relation(fields: [postagem_id], references: [id])
}



